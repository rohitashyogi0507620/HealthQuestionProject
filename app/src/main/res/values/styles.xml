<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="SpinnerStyle">
        <item name="android:padding">@dimen/margin_15dp</item>
        <item name="android:textColor">@color/color_edittext_color</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/editext_txt_size</item>

    </style>
    <style name="buttonStyleOutline" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingLeft">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_padding_right</item>
        <item name="strokeColor">@color/colorprimary</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
    </style>

    <style name="textStyleSubHeading">
        <item name="android:textColor">@color/colortext_top_subheading</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPrimaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="cornerRadius">@dimen/bnt_8dp_padding</item>
        <item name="android:textSize">@dimen/signup_continue_txt_size</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/colortext_top_products_subheading</item>
        <item name="android:backgroundTint">@color/button_disable_color</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="EditTextStyleQuestion" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="cornerRadius">@dimen/bnt_8dp_padding</item>
        <item name="android:textColor">@color/color_edittext_color</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/signup_continue_txt_size</item>


    </style>


    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/bnt_8dp_padding</item>
    </style>

    <style name="EditTextStyleOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
        <item name="boxStrokeWidth">@dimen/border_1dp</item>
        <item name="boxStrokeColor">@color/color_border_line_edittext</item>
        <item name="hintTextColor">@color/hint_color_editext</item>

    </style>

    <dimen name="border_1dp">1dp</dimen>
    <color name="color_border_line_edittext">#716C6B</color>

    <style name="EditTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/margin_15dp</item>
        <item name="cornerRadius">@dimen/bnt_8dp_padding</item>
        <item name="android:textColor">@color/color_edittext_color</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/editext_txt_size</item>


    </style>
</resources>